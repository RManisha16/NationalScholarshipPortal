@model NScholarshipP.Models.Announcement

@{
    ViewData["Title"] = "Add Announcement";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Add New Announcement</h2>

    <form asp-action="CreateAnnouncement" method="post" class="shadow p-4 rounded bg-light">
        <div class="mb-3">
            <label asp-for="Title" class="form-label fw-bold">Title</label>
            <input asp-for="Title" class="form-control" placeholder="Enter announcement title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Message" class="form-label fw-bold">Content</label>
            <textarea asp-for="Message" class="form-control" rows="4" placeholder="Enter announcement details"></textarea>
            <span asp-validation-for="Message" class="text-danger"></span>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success px-4">Create</button>
            <a asp-controller="Home" asp-action="AnnouncementsAdmin" class="btn btn-secondary px-4 ms-2">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
