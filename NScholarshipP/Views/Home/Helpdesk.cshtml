@{
    ViewBag.Title = "Helpdesk";
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}

<h2>Helpdesk Support</h2>

<div class="helpdesk-container">
    <div class="helpdesk-card">
        <h3>Email Support</h3>
        <p>📧 support@nsp.gov.in</p>
    </div>

    <div class="helpdesk-card">
        <h3>Phone Support</h3>
        <p>📞 1800-123-4567</p>
    </div>

    <div class="helpdesk-card">
        <h3>Working Hours</h3>
        <p>🕘 9 AM - 6 PM (Monday to Friday)</p>
    </div>
</div>

<style>
    .helpdesk-container {
        display: flex;
        gap: 20px;
        margin-top: 20px;
        flex-wrap: wrap;
    }

    .helpdesk-card {
        flex: 1;
        min-width: 250px;
        background-color: #f4f4f4;
        border: 1px solid #ddd;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
    }

        .helpdesk-card h3 {
            margin-top: 0;
            color: #333;
        }

        .helpdesk-card p {
            font-size: 16px;
            color: #555;
        }
</style>