@model IEnumerable<NScholarshipP.Models.Announcement>
@{
    ViewData["Title"] = "Announcements(Public)";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <h2 class="text-center mb-4" style="color:#0d6efd; font-weight:600;">Latest Announcements</h2>

    @if (Model == null || !Model.Any())
    {
        <p class="text-center fs-5">No announcements available at the moment.</p>
    }
    else
    {
        <div class="list-group">
            @foreach (var item in Model)
            {
                <a asp-action="DetailsAnnouncement" asp-route-id="@item.Id" class="list-group-item list-group-item-action mb-3 rounded-3" style="border: 1px solid #dee2e6;">
                    <div class="d-flex justify-content-between align-items-center mb-1">
                        <h5 class="mb-0" style="font-weight:500;">@item.Title</h5>
                        <small class="text-muted">@item.DatePosted.ToLocalTime().ToString("dd-MM-yyyy")</small>
                    </div>
                    <p class="mb-0" style="font-size:16px; line-height:1.5;">@item.Message</p>
                </a>
            }
        </div>
    }
</div>

<style>
    /* Hover effect */
    .list-group-item:hover {
        background-color: #f1f5f9;
        transition: 0.2s;
    }

    /* Responsive adjustments */
    @@media (max-width: 767px) {
        .list-group-item h5

    {
        font-size: 16px;
    }

    .list-group-item p {
        font-size: 15px;
    }

    }
</style>
