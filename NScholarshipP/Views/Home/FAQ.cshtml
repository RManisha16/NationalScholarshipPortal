@{
    ViewData["Title"] = "FAQ";
}

<div class="container py-5">
    <div class="row">
        <!-- LEFT SIDEBAR (sticky with larger icons) -->
        <div class="col-lg-3 mb-4">
            <div class="list-group shadow-sm sticky-sidebar" id="faqCategoryList">
                <a href="javascript:void(0);" class="list-group-item list-group-item-action active d-flex align-items-center" data-target="studentFaqs">
                    <i class="bi bi-person-circle me-3 fs-4 text-success"></i>
                    <span class="fw-semibold fs-6">STUDENTS</span>
                </a>
                <a href="javascript:void(0);" class="list-group-item list-group-item-action d-flex align-items-center" data-target="instituteFaqs">
                    <i class="bi bi-building me-3 fs-4 text-success"></i>
                    <span class="fw-semibold fs-6">INSTITUTIONS</span>
                </a>
                <a href="javascript:void(0);" class="list-group-item list-group-item-action d-flex align-items-center" data-target="officerFaqs">
                    <i class="bi bi-shield-fill-check me-3 fs-4 text-success"></i>
                    <span class="fw-semibold fs-6">STATEOFFICER/MINISTRY</span>
                </a>
                <!-- ===== Picture at bottom of Ministry section ===== -->
                <div class="faq-bottom-image mt-5">
                    <img src="~/images/faq.png"
                         alt="Scholarship Helpdesk Banner"
                         class="img-fluid w-100 rounded shadow-sm">
                </div>
            </div>
        </div>


        <!-- MAIN CONTENT -->
        <div class="col-lg-9">
            <h2 class="fw-bold text-success mb-4">Frequently Asked Questions</h2>
            <p class="text-muted mb-3">Select a section on the left to view the relevant FAQs.</p>

            <!-- STUDENT FAQ -->
            <div id="studentFaqs" class="faq-section">
                <h4 class="fw-semibold text-dark border-bottom pb-2 mb-3">Student FAQs</h4>
                <div class="accordion" id="accordionStudent">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="stud1">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#studCollapse1" aria-expanded="true" aria-controls="studCollapse1">
                                How do I register as a student?
                            </button>
                        </h2>
                        <div id="studCollapse1" class="accordion-collapse collapse show" aria-labelledby="stud1" data-bs-parent="#accordionStudent">
                            <div class="accordion-body">
                                Go to the <strong>Student → Register</strong> page, fill in your personal, academic, and bank details, then upload required documents. After verification, you can log in.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="stud2">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#studCollapse2" aria-expanded="true" aria-controls="studCollapse2">
                                I forgot my password. How can I reset it?
                            </button>
                        </h2>
                        <div id="studCollapse2" class="accordion-collapse collapse show" aria-labelledby="stud2" data-bs-parent="#accordionStudent">
                            <div class="accordion-body">
                                Click on “Forgot Password” on the login page and follow the
                                steps to reset using your registered email or mobile number.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header" id="stud3">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#studCollapse3" aria-expanded="false" aria-controls="studCollapse3">
                                What documents do I need to upload?
                            </button>
                        </h2>
                        <div id="studCollapse3" class="accordion-collapse collapse" aria-labelledby="stud3" data-bs-parent="#accordionStudent">
                            <div class="accordion-body">
                                You must upload your Aadhar card, institute ID card, previous year marksheet, bank passbook front page, and a passport photo in PDF/JPG format.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="stud4">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#studCollapse4" aria-expanded="true" aria-controls="studCollapse4">
                                How will I know if my scholarship is approved?
                            </button>
                        </h2>
                        <div id="studCollapse4" class="accordion-collapse collapse show" aria-labelledby="stud4" data-bs-parent="#accordionStudent">
                            <div class="accordion-body">
                                Your application status will be appeared once you logged in to
                                the portal.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="stud5">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#studCollapse5" aria-expanded="true" aria-controls="studCollapse5">
                                What happens after I submit my application?
                            </button>
                        </h2>
                        <div id="studCollapse5" class="accordion-collapse collapse show" aria-labelledby="stud5" data-bs-parent="#accordionStudent">
                            <div class="accordion-body">
                                Your application goes to your institute for verification, then to
                                the State Nodal Officer, and finally to the Ministry.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="stud7">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#studCollapse7" aria-expanded="true" aria-controls="studCollapse7">
                                Is there a deadline for registration and application?
                            </button>
                        </h2>
                        <div id="studCollapse7" class="accordion-collapse collapse show" aria-labelledby="stud7" data-bs-parent="#accordionStudent">
                            <div class="accordion-body">
                                Yes, each scheme has its own deadline. Check the “Latest
                                Announcements” section regularly
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- INSTITUTE FAQ -->
            <div id="instituteFaqs" class="faq-section" style="display:none;">
                <h4 class="fw-semibold text-dark border-bottom pb-2 mb-3">Institution FAQs</h4>
                <div class="accordion" id="accordionInstitute">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="inst1">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#instCollapse1" aria-expanded="true" aria-controls="instCollapse1">
                                How can an institute register on the portal?
                            </button>
                        </h2>
                        <div id="instCollapse1" class="accordion-collapse collapse show" aria-labelledby="inst1" data-bs-parent="#accordionInstitute">
                            <div class="accordion-body">
                                Institutes can apply under the <strong>Institute Registration</strong> section. Fill in the institution name, code, district, and upload affiliation certificates before submission.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header" id="inst2">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#instCollapse2" aria-expanded="false" aria-controls="instCollapse2">
                                How does the institute verify student applications?
                            </button>
                        </h2>
                        <div id="instCollapse2" class="accordion-collapse collapse" aria-labelledby="inst2" data-bs-parent="#accordionInstitute">
                            <div class="accordion-body">
                                After logging in, click <strong>Fetch Applications</strong> to view student forms. Review each and either forward valid ones to the state officer or reject invalid ones.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="inst3">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#instCollapse3" aria-expanded="false" aria-controls="instCollapse3">
                                Who approves institute registration?
                            </button>
                        </h2>
                        <div id="instCollapse3" class="accordion-collapse collapse" aria-labelledby="inst3" data-bs-parent="#accordionInstitute">
                            <div class="accordion-body">
                                The State Nodal Officer verifies and forwards it to the Ministry
                                for final approval.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="inst4">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#instCollapse4" aria-expanded="false" aria-controls="instCollapse4">
                                What is the DISE code?
                            </button>
                        </h2>
                        <div id="instCollapse4" class="accordion-collapse collapse" aria-labelledby="inst4" data-bs-parent="#accordionInstitute">
                            <div class="accordion-body">
                                It’s a unique code assigned to each institute by the government
                                for identification.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="inst5">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#instCollapse5" aria-expanded="false" aria-controls="instCollapse5">
                                What is the Affiliated Certificate and how is it uploaded?
                            </button>
                        </h2>
                        <div id="instCollapse5" class="accordion-collapse collapse" aria-labelledby="inst5" data-bs-parent="#accordionInstitute">
                            <div class="accordion-body">
                                It is the certificate given to the institutions when they are
                                affiliated with the government universities and it must be
                                uploaded during verification.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="inst6">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#instCollapse6" aria-expanded="false" aria-controls="instCollapse6">
                                How does the institute receive login credentials?
                            </button>
                        </h2>
                        <div id="instCollapse6" class="accordion-collapse collapse" aria-labelledby="inst6" data-bs-parent="#accordionInstitute">
                            <div class="accordion-body">
                                After Ministry approval, login credentials are activated and
                                institute can login.
                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!-- STATE OFFICER FAQ -->
            <div id="officerFaqs" class="faq-section" style="display:none;">
                <h4 class="fw-semibold text-dark border-bottom pb-2 mb-3">State Officer FAQs</h4>
                <div class="accordion" id="accordionOfficer">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="off1">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#offCollapse1" aria-expanded="true" aria-controls="offCollapse1">
                                What is the role of the State Officer?
                            </button>
                        </h2>
                        <div id="offCollapse1" class="accordion-collapse collapse show" aria-labelledby="off1" data-bs-parent="#accordionOfficer">
                            <div class="accordion-body">
                                The State Officer verifies applications forwarded by institutes and either approves or rejects them. Approved applications are sent to the Ministry for final validation.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header" id="off2">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#offCollapse2" aria-expanded="false" aria-controls="offCollapse2">
                                Can State Officers edit student details?
                            </button>
                        </h2>
                        <div id="offCollapse2" class="accordion-collapse collapse" aria-labelledby="off2" data-bs-parent="#accordionOfficer">
                            <div class="accordion-body">
                                No. State Officers can only view, verify, approve, or reject applications. Editing details must be done by the student before submission.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="off3">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#offCollapse3" aria-expanded="true" aria-controls="offCollapse3">
                                What is the Ministry’s responsibility?
                            </button>
                        </h2>
                        <div id="offCollapse3" class="accordion-collapse collapse show" aria-labelledby="off3" data-bs-parent="#accordionOfficer">
                            <div class="accordion-body">
                                The Ministry performs final review and approval of scholarship applications and sanctions the scholarship funds.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header" id="off4">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#offCollapse4" aria-expanded="false" aria-controls="offCollapse4">
                                How does the Ministry communicate approval results?
                            </button>
                        </h2>
                        <div id="offCollapse4" class="accordion-collapse collapse" aria-labelledby="off4" data-bs-parent="#accordionOfficer">
                            <div class="accordion-body">
                                Once approved, notifications are sent to students and institutes through their registered email IDs and are visible on their dashboards.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
    </div> 
</div> 
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const links = document.querySelectorAll('#faqCategoryList a');
        const sections = document.querySelectorAll('.faq-section');

        links[0].classList.add('active');
        sections[0].style.display = 'block';

        links.forEach(link => {
            link.addEventListener('click', function () {
                links.forEach(l => l.classList.remove('active'));
                sections.forEach(s => s.style.display = 'none');
                this.classList.add('active');
                const target = this.getAttribute('data-target');
                document.getElementById(target).style.display = 'block';

                if (window.innerWidth < 992) {
                    document.getElementById(target).scrollIntoView({ behavior: 'smooth', block: 'start' });
                }
            });
        });
    });
</script>

<style>

    .sticky-sidebar {
        position: static;
    }

    @@media (min-width: 992px) {
        .sticky-sidebar {
            position: -webkit-sticky;
            position: sticky;
            top: 100px;
            align-self: flex-start;
        }
    }

    .list-group-item {
        border: none;
        border-left: 4px solid transparent;
        padding: 0.8rem 1rem;
        transition: all 0.2s ease-in-out;
    }

        .list-group-item i {
            min-width: 28px; 
            font-size: 1.4rem; 
            color: #198754 !important;
            transition: transform 0.2s ease, color 0.2s ease;
        }

        .list-group-item span {
            color: #111;
        }

        .list-group-item:hover {
            background-color: #f0fdf4;
            border-left-color: #198754;
        }

            .list-group-item:hover i {
                transform: scale(1.15);
            }

        .list-group-item.active {
            background-color: #198754 !important;
            border-left-color: #198754;
            color: #fff !important;
        }

            .list-group-item.active i {
                color: #fff !important;
                transform: scale(1.2);
            }

            .list-group-item.active span {
                color: #fff !important;
            }

    .faq-bottom-image {
        margin-top: 20px;
        overflow: hidden;
        border-radius: 12px;
    }

        .faq-bottom-image img {
            display: block;
            object-fit: cover;
            width: 100%;
            height: auto;
            border: 3px solid #1987541f;
            transition: transform 0.3s ease;
        }

            .faq-bottom-image img:hover {
                transform: scale(1.02);
            }

    footer {
        margin-top: 0 !important;
    }
</style>