@model NScholarshipP.Models.Announcement
@{
    ViewData["Title"] = "Announcement Details";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">
    <!-- Announcement Title -->
    <h2 class="fw-bold mb-2">@Model.Title</h2>

    <!-- Date -->
    <small class="text-muted mb-4 d-block">Posted on: @Model.DatePosted.ToLocalTime().ToString("dd-MM-yyyy")</small>

    <!-- Message -->
    <p style="font-size:16px; line-height:1.6;">@Model.Message</p>

    <!-- Back Button -->
    <a asp-controller="Home" asp-action="AnnouncementsPublic" class="btn btn-primary mt-3">← Back to Announcements</a>
</div>

<style>
    body {
        font-family: "Poppins", sans-serif;
        background-color: #f8f9fa;
    }

    h2 {
        color: #0d6efd;
    }

    a.btn-primary {
        background-color: #0d6efd;
        border: none;
    }

        a.btn-primary:hover {
            background-color: #0b5ed7;
        }
</style>
