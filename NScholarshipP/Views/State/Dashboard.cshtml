@{

    Layout = null;
    ViewData["Title"] = "State Dashboard";

}

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>

    <style>

        body {
            background: #f4f7fb;
            font-family: "Segoe UI", Roboto, Arial, sans-serif;
        }

        .sidebar {
            background: #1565c0;
            color: #fff;
            min-height: 100vh;
            padding-top: 20px;
            position: fixed;
            left: 0;
            top: 0;
            bottom: 0;
            width: 260px;
        }

            .sidebar .profile-pic {
                width: 82px;
                height: 82px;
                object-fit: cover;
                border-radius: 50%;
                border: 3px solid rgba(255,255,255,0.12);
            }

            .sidebar .nav-link {
                color: rgba(255,255,255,0.9);
            }

                .sidebar .nav-link:hover {
                    background: rgba(255,255,255,0.03);
                    color: #fff;
                    border-radius: 8px;
                }

        .content {
            margin-left: 280px;
            padding: 28px;
        }

        /* stat card look */

        .stat-card {
            border-radius: 12px;
            box-shadow: 0 6px 18px rgba(18, 38, 63, 0.06);
            padding: 18px;
        }

            .stat-card h6 {
                color: #6b7280;
                margin-bottom: 8px;
            }

            .stat-card .value {
                font-size: 28px;
                font-weight: 700;
            }

        .topbar {
            display: flex;
            font-size: 20px;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 18px;
        }

        .hamburger {
            font-size: 20px;
            cursor: pointer;
        }

        .brand {
            font-weight: 700;
            color: #1f6f3d;
            font-size: 20px;
        }

        .card-chart {
            border-radius: 12px;
            padding: 12px;
            background: #fff;
        }

        /* responsive smaller screens */

        @@media (max-width: 991px) {

            .sidebar {
                position: relative;
                width: 100%;
                min-height: auto;
            }

            .content {
                margin-left: 0;
                padding: 16px;
            }
        }</style>
</head>
<body>

    <!-- LEFT SIDEBAR -->
    <aside class="sidebar d-flex flex-column">
        <div class="text-center px-3 mb-3">
            <img src=~/Images/default.jpg alt="photo" class="profile-pic mb-2" />
            <div class="text-white">State Officer</div>
            <div class="text-white">StateOfficer@gmail.com</div>
            <div class="text-white">+91-6309459231</div>
        </div>

        <nav class="nav flex-column px-3 mt-4">
            <a class="nav-link mb-2" href="@Url.Action("Dashboard", "State")"><i class="fa-solid fa-gauge-high me-2"></i> Dashboard</a>
            <a class="nav-link mb-2" href="@Url.Action("StudentApplications", "State")"><i class="fa-solid fa-user-graduate me-2"></i> View Student Applications</a>
            <a class="nav-link mb-2" href="@Url.Action("InstituteApplications", "State")"><i class="fa-solid fa-building me-2"></i> View Institute Applications</a>
            <a class="nav-link mb-2 fw-bold" style="color: maroon;" href="@Url.Action("Logout", "State")"><i class="fa-solid fa-right-from-bracket me-2"></i> Logout</a>
        </nav>
        <br />
        <br />
        <br />
        <br />
        <br />
        <div class="mt- auto p-3 text-white">

            © @DateTime.Now.Year National Scholarship Portal — State Dashboard
        </div>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="content">
        <div class="topbar">
            <div>
                <div class="brand" style="font-size:30px;">National Scholarship Portal</div>
            </div>

            <div class="d-flex align-items-center gap-3">
                <div class="me-3 text-muted small" style="font-size:20px;">Welcome, <strong>State Officer</strong></div>

                <!-- Right top small menu (hamburger triggers same nav)-->
            </div>
        </div>

        <div class="container mt-4 dashboard-container">
            <div class="text-center mb-4">
                <h2 class="dashboard-title">State Dashboard</h2>
                <p class="text-black mb-1">Academic Year 2025–26</p>
            </div>

            <!-- Summary Cards -->
            <div class="row justify-content-center mb-4">
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card dashboard-card text-center p-3">
                        <h5 class="text-black">Total Students</h5>
                        <h2 class="fw-bold text-dark">@Model.TotalStudents</h2>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card dashboard-card text-center p-3">
                        <h5 class="text-black">Pending Students</h5>
                        <h2 class="fw-bold text-warning">@Model.PendingStudents</h2>
                    </div>
                </div>

                <!-- Total Institutes -->
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card dashboard-card text-center p-3">
                        <h5 class="text-black">Total Institutes</h5>
                        <h2 class="fw-bold text-dark">@Model.TotalInstitutes</h2>
                    </div>
                </div>


                <!-- Pending Institutes -->
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card dashboard-card text-center p-3">
                        <h5 class="text-black">Pending Institutes</h5>
                        <h2 class="fw-bold text-info">@Model.PendingInstitutes</h2>
                    </div>
                </div>


                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card dashboard-card text-center p-3">
                        <h5 class="text-black">Forwarded Students</h5>
                        <h2 class="fw-bold text-success">@Model.ForwardedCount</h2>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="card dashboard-card text-center p-3">
                        <h5 class="text-black">Forwarded Institutes</h5>
                        <h2 class="fw-bold text-success">@Model.ForwardedCountInstitute</h2>
                    </div>
                </div>
            </div>
        </div>


    </main>

    <!-- Bootstrap bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>

