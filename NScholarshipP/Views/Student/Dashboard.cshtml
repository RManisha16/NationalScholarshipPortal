@{



    ViewData["Title"] = "Student Dashboard";



}



<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />



<style>



       body {
               font-family: "Poppins", sans-serif;
               background: linear-gradient(135deg, #e3f2fd, #f5faff);
               min-height: 100vh;
               padding: 20px;

    }



       .logout-btn {
               position: absolute;
               top: 25px;
               right: 35px;

    }



           .logout-btn button {
                   border-radius: 10px;
                   font-weight: 500;
                   padding: 6px 18px;

    }




    /* Header Section */
       .dashboard-header {
               text-align: center;
               margin-bottom: 40px;

    }



           .dashboard-header h2 {
                   font-weight: 700;
                   color: #0d47a1;

    }



           .dashboard-header p {
                   color: #6c757d;
                   font-size: 0.95rem;

    }




    /* Profile Section */
       .profile-section {
               background: #ffffff;
               border-radius: 20px;
               box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
               padding: 25px;
               text-align: center;

    }



           .profile-section:hover {
                   transform: translateY(-4px);

    }



       .profile-pic {
               width: 100px;
               height: 100px;
               border-radius: 50%;
               border: 4px solid #1565c0;
               object-fit: cover;
               margin-bottom: 12px;

    }



       .profile-section h5 {
               color: #0d47a1;
               font-weight: 600;

    }



       .profile-section p {
               color: #6c757d;
               font-size: 0.9rem;
               margin-bottom: 15px;

    }




    /* Scheme Card */
       .scheme-card {
               background: #ffffff;
               border-radius: 20px;
               box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);

    }



           .scheme-card:hover {
                   transform: translateY(-5px);
                   box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);

    }



           .scheme-card .card-header {
                   background: linear-gradient(135deg, #1565c0, #42a5f5);
                   color: white;
                   font-weight: 600;
                   border-top-left-radius: 20px;
                   border-top-right-radius: 20px;

    }



           .scheme-card .btn-outline-primary {
                   border-radius: 10px;
                   font-weight: 500;

    }



               .scheme-card .btn-outline-primary:hover {
                       background: linear-gradient(135deg, #1565c0, #42a5f5);
                       color: white;

    }




    /* Stats Section */
       .stats-card {
               border-radius: 15px;
               text-align: center;
               padding: 10px;

    }



           .stats-card:hover {
                   transform: translateY(-4px);

    }



           .stats-card h4 {
                   font-weight: 700;
                   margin-top: 5px;

    }



       .btn-view {
               border-radius: 10px;
               padding: 10px;
               font-weight: 500;
               background: linear-gradient(135deg, #1565c0, #42a5f5);
               border: none;

    }



           .btn-view:hover {
                   background: linear-gradient(135deg, #0d47a1, #1e88e5);

    }



       @@keyframes fadeIn {
               from

    {
                   opacity: 0;
                   transform: translateY(10px);

    }



           to {
                   opacity: 1;
                   transform: translateY(0);

    }


    }
</style>



<div class="container dashboard-container">
    <div class="logout-btn">
        <form asp-controller="Student" asp-action="Logout" method="post">
            <button class="btn btn-danger shadow-sm">Logout</button>
        </form>
    </div>



    <div class="dashboard-header">
        <h2>Student Dashboard</h2>
        <p>Welcome, <strong>@Model.StudentName</strong>! Explore scholarships, check your progress, and manage your applications.</p>
    </div>



    <div class="row g-4">
        <!-- Left Section - Schemes -->
        <div class="col-lg-4">
            <div class="card scheme-card">
                <div class="card-header text-center">
                    Available Scholarship Schemes
                </div>
                <div class="card-body">
                    @foreach (var scheme in Model.Schemes)
                    {
                        <form asp-controller="Student" asp-action="Apply" method="get" class="mb-2 fw-bold">
                            <input type="hidden" name="scheme" value="@scheme" />
                            <button type="submit" class="btn btn-outline-primary w-100">@scheme</button>
                        </form>
                    }
                </div>
            </div>
        </div>



        <!-- Middle Section - Stats -->
        <div class="col-lg-5">
            <div class="card border-0 shadow-lg p-4" style="border-radius: 20px;">
                <h4 class="text-primary fw-bold mb-3">Application Summary</h4>
                <div class="row g-3">
                    <div class="col-md-4">
                        <div class="stats-card bg-light">
                            <h6>Total</h6>
                            <h4>@Model.TotalApplications</h4>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stats-card text-white" style="background: #43a047;">
                            <h6>Approved</h6>
                            <h4>@Model.ApprovedCount</h4>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="stats-card text-dark" style="background: #ffeb3b;">
                            <h6>Pending</h6>
                            <h4>@Model.PendingCount</h4>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>



        <!-- Right Section - Profile -->
        <div class="col-lg-3">
            <div class="profile-section shadow-sm">
                @{
                    var photo = Context.Session.GetString("StudentPhotoPath") ?? "/Images/default.jpg";
                }
                <img src="@Url.Content(photo)" alt="Profile" class="profile-pic" />
                <h5>@Model.StudentName</h5>
                <p>@Model.StudentEmail</p>
                <hr />
                <a asp-Controller="Student" asp-action="Profile" class="btn btn-outline-primary btn-sm w-100 mb-2 fw-bold" style="font-size:14px;">My Profile</a>
                <a asp-action="MyApplications" class="btn btn-outline-success btn-sm w-100 mb-2 fw-bold" style="font-size:14px;">My Applications</a>
                <form asp-controller="Student" asp-action="Logout" method="post" class="mt-2">
                    <button type="submit" class="btn btn-danger btn-sm w-100">Logout</button>
                </form>
            </div>
        </div>
    </div>
</div>

