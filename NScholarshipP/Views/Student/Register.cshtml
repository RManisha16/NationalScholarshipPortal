@model NScholarshipP.Models.Student
@{
    ViewData["Title"] = "Student Registration";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-5" style="max-width: 700px; width: 100%; border-radius: 15px; background: #f7f9fc;">
        <div class="text-center mb-4">
            <div style="font-size: 50px; color: #FF7043;">
                <i class="bi bi-person-plus-fill"></i> <!-- Registration Icon -->
            </div>
            <h3 class="mt-2">@ViewData["Title"]</h3>
            <p class="text-muted">Create your student account securely</p>
        </div>

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger text-center">@Html.ValidationSummary()</div>
        }

        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3">
                <label asp-for="FullName" class="form-label fw-semibold"></label>
                <input asp-for="FullName" class="form-control" placeholder="Enter full name" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SecurityQuestion" class="form-label fw-semibold"></label>
                <select asp-for="SecurityQuestion" class="form-select">
                    <option value="">-- Select a Question --</option>
                    <option>What is your mother's name?</option>
                    <option>What is your first school name?</option>
                    <option>What is your pet's name?</option>
                    <option>What is your favorite color?</option>
                </select>
                <span asp-validation-for="SecurityQuestion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SecurityAnswer" class="form-label fw-semibold"></label>
                <input asp-for="SecurityAnswer" class="form-control" placeholder="Enter your answer" />
                <span asp-validation-for="SecurityAnswer" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label fw-semibold"></label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label fw-semibold"></label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-4">
                <label asp-for="ConfirmPassword" class="form-label fw-semibold"></label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm password" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-gradient w-100 mb-3" style="background: linear-gradient(90deg, #1565c0); color: white; font-weight: bold;">Register</button>

            <div class="text-center">
                <a asp-action="Login" class="text-decoration-none text-muted">Already have an account? Login →</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
