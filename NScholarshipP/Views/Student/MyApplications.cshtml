@model IEnumerable<NScholarshipP.Models.StudentApplication>

@{
    ViewData["Title"] = "My Applications";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        font-family: "Poppins", sans-serif;
        background: linear-gradient(135deg, #e3f2fd, #f5faff);
        min-height: 100vh;
        padding: 20px;
    }

    .applications-container {
        animation: fadeIn 0.6s ease-in-out;
    }

    h3 {
        color: #0d47a1;
        font-weight: 700;
        margin-bottom: 20px;
    }

    .table-container {
        background: rgba(255, 255, 255, 0.95);
        border-radius: 18px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
        padding: 25px;
    }

    table {
        border-radius: 15px;
        overflow: hidden;
        background: white;
    }

    thead th {
        background: linear-gradient(135deg, #1565c0);
        color: white;
        text-align: center;
        font-weight: 600;
        letter-spacing: 0.4px;
    }

    tbody tr {
        text-align: center;
        vertical-align: middle;
    }

        tbody tr:hover {
            background-color: #e3f2fd;
            transition: 0.2s ease-in;
        }

    .badge {
        border-radius: 10px;
        font-size: 0.9rem;
        padding: 6px 12px;
    }

    .btn-primary {
        background: linear-gradient(135deg, #1565c0, #42a5f5);
        border: none;
        border-radius: 10px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #0d47a1, #1e88e5);
            transform: translateY(-2px);
        }

    .btn-secondary {
        border-radius: 10px;
        font-weight: 500;
    }

    .alert {
        border-radius: 12px;
        font-weight: 500;
    }

    @@keyframes fadeIn {
        from

    {
        opacity: 0;
        transform: translateY(10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }</style>

<div class="container py-4">
    <h3 class="text-center mb-4">Scholarship Applications (@(Model?.Count() ?? 0))</h3>

    <div class="d-flex justify-content-between mb-4 align-items-center">
        <a asp-action="Dashboard" class="btn btn-light shadow-sm">
            ← Back to Dashboard
        </a>
    </div>


    <div class="table-container mt-4">
        @if (!Model.Any())
        {
            <div class="alert alert-info text-center">
                You have not submitted any applications yet.
            </div>
        }
        else
        {
            <table class="table table-hover align-middle">
                <thead>
                    <tr>
                        <th>Scheme Name</th>
                        <th>Submitted On</th>
                        <th>Status</th>
                        <th>Institute</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var app in Model)
                    {
                        <tr>
                            <td>@app.SchemeName</td>
                            <td>@app.DateSubmitted?.ToString("dd-MM-yyyy")</td>
                            <td>
                                @if (app.Status == "Approved")
                                {
                                    <span class="badge bg-success">Approved</span>
                                }
                                else if (app.Status == "Rejected")
                                {
                                    <span class="badge bg-danger">Rejected</span>
                                }
                                else if (app.Status == "ForwardedToInstitute")
                                {
                                    <span class="badge bg-warning text-dark">Pending (Institute)</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@app.Status</span>
                                }
                            </td>
                            <td>@app.InstituteName</td>
                            <td>
                                <a asp-controller="Student" asp-action="Details" asp-route-id="@app.Id"
                                   class="btn btn-sm btn-primary px-3 shadow-sm">View</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>

    
</div>
