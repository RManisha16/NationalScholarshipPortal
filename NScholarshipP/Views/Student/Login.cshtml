@model NScholarshipP.Models.Student
@{
    ViewData["Title"] = "Student Login";
}
<style>
    body {
        font-family: "Poppins", sans-serif;
        background: linear-gradient(135deg, #e3f2fd, #f5faff);
        min-height: 100vh;
    }

    .login-container {
        max-width: 1000px;
        width: 100%;
        background: #ffffff;
        border-radius: 25px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .login-left {
        padding: 50px;
        background: white;
    }

        .login-left h5 {
            color: #1565c0;
            font-weight: 700;
            text-align: center;
            margin-bottom: 10px;
        }

        .login-left p {
            color: #6c757d;
            text-align: center;
            margin-bottom: 30px;
        }

    .form-control {
        border-radius: 10px;
        padding: 12px;
        border: 1px solid #ced4da;
    }

        .form-control:focus {
            border-color: #1565c0;
            box-shadow: 0 6px 6px rgba(21, 101, 192, 0.3);
        }

    label {
        font-weight: 500;
        color: #0d47a1;
    }

    .btn-login {
        background: linear-gradient(135deg, #1565c0, #42a5f5);
        border: none;
        color: white;
        font-weight: 600;
        border-radius: 12px;
        padding: 12px;
    }

        .btn-login:hover {
            transform: translateY(-2px);
            background: linear-gradient(135deg, #0d47a1, #1e88e5);
            box-shadow: 0 5px 15px rgba(21, 101, 192, 0.3);
        }

    .remember-me label {
        color: #6c757d;
        font-size: 0.9rem;
    }

    .login-right img {
        height: 100%;
        width: 100%;
        object-fit: cover;
        filter: brightness(0.95);
    }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(15px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@media (max-width: 767px) {
        .login-left {
            padding: 30px;
        }

        .login-right {
            display: none;
        }
    }
</style>

<div class="container-fluid vh-100 d-flex align-items-center justify-content-center">
    <div class="row login-container">
        <!-- LEFT SIDE - LOGIN FORM -->
        <div class="col-md-6 login-left d-flex flex-column justify-content-center">
            <h5>Student Login</h5>
            <p>Enter your credentials to access your account</p>

            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center">@TempData["Success"]</div>
            }
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger text-center">@TempData["Error"]</div>
            }
            @if (ViewBag.Error != null)
            {
                <div class="text-danger mt-2">@ViewBag.Error</div>
            }
            <form asp-action="Login" method="post">
                @Html.AntiForgeryToken()
                <div class="form-group mb-3">
                    <label>Email</label>
                    <input type="email" name="Email" class="form-control" placeholder="Enter your Email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label>Password</label>
                    <input type="password" name="Password" class="form-control" placeholder="Enter your Password"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between align-items-center mb-3 remember-me">
                    <div>
                        <input type="checkbox" id="remember" />
                        <label for="remember" class="ms-1">Remember Me</label>
                    </div>
                    <div>
                        <a asp-action="ForgotPassword" class="text-decoration-none">Forgot Password?</a>
                    </div>
                </div>

                <button type="submit" class="btn btn-login w-100">Login</button>
            </form>

            <hr />
            <p class="text-center">
                Don’t have an account?
                <a asp-action="Register" class="text-decoration-none text-primary">Register here</a>
            </p>
        </div>

        <!-- RIGHT SIDE - IMAGE -->
        <div class="col-md-6 login-right p-0">
            <img src="~/images/studentlogin.png" alt="Student Login" class="img-fluid" />
        </div>
    </div>
</div>
