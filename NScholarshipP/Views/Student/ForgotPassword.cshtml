@model NScholarshipP.Models.Student
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-5" style="max-width: 480px; width: 100%; border-radius: 15px; background: #f7f9fc;">
        <div class="text-center mb-4">
            <div style="font-size: 50px; color: #2196F3;">
                <i class="bi bi-envelope-fill"></i> <!-- Bootstrap icon for email -->
            </div>
            <h3 class="mt-2">@ViewData["Title"]</h3>
            <p class="text-muted">Enter your registered email to reset your password</p>
        </div>

        <form asp-action="ForgotPassword" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group mb-4">
                <label>Email</label>
                <input type="email" name="email" class="form-control" placeholder="Enter your registered email"/>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-gradient w-100" style="background: linear-gradient(90deg, green, lightgreen); color: white; font-weight: bold;">Continue</button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Login" class="text-decoration-none text-muted">← Back to Login</a>
        </div>
    </div>
</div>
