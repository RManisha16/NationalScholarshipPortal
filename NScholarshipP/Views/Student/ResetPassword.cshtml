@{
    ViewData["Title"] = "Reset Password";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg p-5" style="max-width: 680px; width: 100%; border-radius: 15px; background: #f7f9fc;">
        <div class="text-center mb-4">
            <div style="font-size: 50px; color: #4CAF50;">
                <i class="bi bi-shield-lock-fill"></i> <!-- Bootstrap icon for uniqueness -->
            </div>
            <h3 class="mt-2">@ViewData["Title"]</h3>
            <p class="text-muted">Securely reset your password</p>
        </div>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center">@TempData["Success"]</div>
        }

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger text-center">@Html.ValidationSummary()</div>
        }

        <form asp-action="ResetPassword" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group mb-3">
                <label class="fw-semibold">Security Question</label>
                <div class="bg-light p-2 rounded">@ViewBag.SecurityQuestion</div>
            </div>

            <div class="form-group mb-3">
                <label>Answer</label>
                <input type="text" name="securityAnswer" class="form-control" placeholder="Enter your answer" required />
            </div>

            <div class="form-group mb-3">
                <label>New Password</label>
                <input type="password" name="newPassword" class="form-control" placeholder="Enter new password" required minlength="6" />
            </div>

            <div class="form-group mb-4">
                <label>Confirm Password</label>
                <input type="password" name="confirmPassword" class="form-control" placeholder="Confirm new password" required />
            </div>

            <button type="submit" class="btn btn-gradient w-100" style="background: linear-gradient(90deg, #4CAF50, #81C784); color: white; font-weight: bold;">Reset Password</button>
        </form>

        <div class="text-center mt-3">
            <a asp-action="Login" class="text-decoration-none text-muted">← Back to Login</a>
        </div>
    </div>
</div>
