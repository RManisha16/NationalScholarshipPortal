@{
    ViewData["Title"] = "Application Confirmation";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    main{
        display: flex;
        justify-content: center;
        align-items: center;
    }
    body {
        font-family: "Poppins", sans-serif;
        background: linear-gradient(135deg, #e3f2fd, #f5faff);
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .confirmation-card {
        background: #fff;
        border: none;
        border-radius: 20px;
        box-shadow: 0 6px 20px rgba(0, 0, 0, 0.08);
        max-width: 550px;
        width: 100%;
        padding: 40px 30px;
        text-align: center;
    }
    .confirmation-card h3 {
        font-weight: 600;
        color: #28a745;
        margin-bottom: 15px;
    }

    .confirmation-card p {
        color: #555;
        font-size: 16px;
        line-height: 1.6;
    }

    .btn-custom {
        margin-top: 25px;
        background-color: #007bff;
        border: none;
        padding: 10px 30px;
        border-radius: 25px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-custom:hover {
            background-color: #0056b3;
            transform: translateY(-2px);
        }
</style>

<div class="confirmation-card">
    <h3>Application Submitted</h3>
    <p>Your application has been submitted successfully.</p>
    <p>Your login credentials will be activated within 48 hours after approval from the State and Ministry.</p>
    <a asp-action="Dashboard" class="btn btn-custom">Back to Login</a>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.js"></script>
