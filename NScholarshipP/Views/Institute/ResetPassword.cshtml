@{

    ViewData["Title"] = "Reset Password";

}

@if (TempData["Error"] != null)

{

    <div class="alert alert-danger">@TempData["Error"]</div>

}

@if (TempData["Success"] != null)

{

    <div class="alert alert-success">@TempData["Success"]</div>

    @if (ViewBag.RedirectToLogin == true)

    {

        <script>

            setTimeout(function () {

                window.location.href = '@Url.Action("Login", "Institute")';

            }, 2000); // 3-second delay

        </script>

    }

}

<h3>Reset Your Password</h3>

<form asp-action="ResetPassword" method="post">

    @Html.AntiForgeryToken()



    <input type="hidden" name="InstituteCode" value="@ViewBag.InstituteCode" />



    <div class="mb-3">

        <label for="SecurityAnswer">Security Answer</label>

        <input type="text" name="SecurityAnswer" class="form-control" required />

    </div>



    <div class="mb-3">

        <label for="NewPassword">New Password</label>

        <input type="password" name="NewPassword" class="form-control" required />

    </div>



    <div class="mb-3">

        <label for="ConfirmPassword">Confirm Password</label>

        <input type="password" name="ConfirmPassword" class="form-control" required />

    </div>



    <button type="submit" class="btn btn-success">Reset Password</button>

</form>