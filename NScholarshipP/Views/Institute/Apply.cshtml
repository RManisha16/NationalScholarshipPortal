@model NScholarshipP.Models.InstituteApplication
@{
    ViewData["Title"] = "Institute Registration";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        font-family: "Poppins", sans-serif;
        background: linear-gradient(135deg, #e3f2fd, #f5faff);
        min-height: 100vh;
    }

    .register-wrapper {
        max-width: 1100px;
        margin: 60px auto;
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 10px 35px rgba(0, 0, 0, 0.08);
        padding: 40px 50px;
        transition: 0.3s ease;
    }

        .register-wrapper:hover {
            box-shadow: 0 12px 45px rgba(0, 0, 0, 0.1);
        }

    h3 {
        text-align: center;
        font-weight: 700;
        color: #0d6efd;
        margin-bottom: 35px;
    }

    .section-card {
        background: #f8fbff;
        border-radius: 15px;
        padding: 25px 30px;
        margin-bottom: 25px;
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.05);
        border-left: 5px solid #0d6efd;
    }

        .section-card h5 {
            color: #0d6efd;
            font-weight: 600;
            margin-bottom: 20px;
        }

    .form-label {
        font-weight: 500;
        color: #333;
    }

    .form-control,
    .form-select {
        border-radius: 10px;
        padding: 10px 12px;
        border: 1px solid #cfd8dc;
        transition: 0.3s;
    }

        .form-control:focus,
        .form-select:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 6px rgba(13, 110, 253, 0.3);
        }

    textarea {
        resize: none;
    }

    .btn-primary {
        background: #0d6efd;
        border: none;
        border-radius: 10px;
        padding: 10px 28px;
        font-weight: 500;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background: #0b5ed7;
            transform: translateY(-1px);
        }

    .btn-secondary {
        border-radius: 10px;
        padding: 10px 28px;
    }

    .alert {
        border-radius: 10px;
    }

    .form-check-label {
        font-size: 15px;
        color: #444;
    }
</style>

<div class="container">
    <div class="register-wrapper">
        <h3>Institute Registration</h3>

        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success text-center">@TempData["Success"]</div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger text-center">@TempData["Error"]</div>
        }

        <form asp-action="Apply" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()

            @if (ViewData.ModelState.ContainsKey("") && ViewData.ModelState[""]?.Errors.Count > 0)
            {
                <div class="alert alert-danger text-center">
                    @foreach (var error in ViewData.ModelState[""].Errors)
                    {
                        <div>@error.ErrorMessage</div>
                    }
                </div>
            }


            <div class="section-card">
                <h5>Institute Details</h5>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="InstituteName" class="form-label"></label>
                        <input asp-for="InstituteName" class="form-control" placeholder="Enter Institute Name" />
                        <span asp-validation-for="InstituteName" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="InstituteCode" class="form-label"></label>
                        <input asp-for="InstituteCode" class="form-control" placeholder="Code" />
                        <span asp-validation-for="InstituteCode" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="DISECode" class="form-label"></label>
                        <input asp-for="DISECode" class="form-control" placeholder="DISE Code" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="State" class="form-label"></label>
                        <select asp-for="State" class="form-select">
                            <option value="">-- Select State --</option>
                            <option>Andhra Pradesh</option>
                            <option>Arunachal Pradesh</option>
                            <option>Assam</option>
                            <option>Bihar</option>
                            <option>Chhattisgarh</option>
                            <option>Goa</option>
                            <option>Gujarat</option>
                            <option>Haryana</option>
                            <option>Himachal Pradesh</option>
                            <option>Jharkhand</option>
                            <option>Karnataka</option>
                            <option>Kerala</option>
                            <option>Madhya Pradesh</option>
                            <option>Maharashtra</option>
                            <option>Manipur</option>
                            <option>Meghalaya</option>
                            <option>Mizoram</option>
                            <option>Nagaland</option>
                            <option>Odisha</option>
                            <option>Punjab</option>
                            <option>Rajasthan</option>
                            <option>Sikkim</option>
                            <option>Tamil Nadu</option>
                            <option>Telangana</option>
                            <option>Tripura</option>
                            <option>Uttar Pradesh</option>
                            <option>Uttarakhand</option>
                            <option>West Bengal</option>
                        </select>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="District" class="form-label"></label>
                        <select asp-for="District" class="form-select">
                            <option value="">-- Select State --</option>
                            <option>Anakapalli</option>
                            <option>Anantapur</option>
                            <option>Bapatla</option>
                            <option>Chittoor</option>
                            <option>East Godavari</option>
                            <option>Eluru</option>
                            <option>Guntur</option>
                            <option>Konaseema</option>
                            <option>Kakinada</option>
                            <option>Krishna</option>
                            <option>Kurnool</option>
                            <option>Manyam</option>
                            <option>Nandyal</option>
                            <option>Nellore</option>
                            <option>Palnadu</option>
                            <option>Parvathipuram Manyam</option>
                            <option>Prakasam</option>
                            <option>Sri Sathya Sai</option>
                            <option>Srikakulam</option>
                            <option>Tirupati</option>
                            <option>Visakhapatnam</option>
                            <option>Vizianagaram</option>
                            <option>West Godavari</option>
                            <option>YSR Kadapa</option>
                            <option>Alluri Sitharama Raju</option>
                            <option>Bapatla</option>
                        </select>
                        <span asp-validation-for="District" class="text-danger"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Location" class="form-label"></label>
                        <select asp-for="Location" class="form-select">
                            <option value="">-- Select Location Type --</option>
                            <option>Rural</option>
                            <option>Urban</option>
                        </select>
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="InstituteType" class="form-label"></label>
                        <input asp-for="InstituteType" class="form-control" placeholder="School / College / Polytechnic" />
                        <span asp-validation-for="InstituteType" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="YearAdmissionStarted" class="form-label"></label>
                        <input asp-for="YearAdmissionStarted" type="number" class="form-control" placeholder="e.g. 2005" />
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Address" class="form-label"></label>
                        <textarea asp-for="Address" class="form-control" rows="2" placeholder="Full Address"></textarea>
                    </div>
                </div>
            </div>

            <div class="section-card">
                <h5>Affiliation Details</h5>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="AffiliatedUniversityState" class="form-label"></label>
                        <select asp-for="AffiliatedUniversityState" class="form-select">
                            <option value="">-- Select State --</option>
                            <option>Andhra Pradesh</option>
                            <option>Arunachal Pradesh</option>
                            <option>Assam</option>
                            <option>Bihar</option>
                            <option>Chhattisgarh</option>
                            <option>Goa</option>
                            <option>Gujarat</option>
                            <option>Haryana</option>
                            <option>Himachal Pradesh</option>
                            <option>Jharkhand</option>
                            <option>Karnataka</option>
                            <option>Kerala</option>
                            <option>Madhya Pradesh</option>
                            <option>Maharashtra</option>
                            <option>Manipur</option>
                            <option>Meghalaya</option>
                            <option>Mizoram</option>
                            <option>Nagaland</option>
                            <option>Odisha</option>
                            <option>Punjab</option>
                            <option>Rajasthan</option>
                            <option>Sikkim</option>
                            <option>Tamil Nadu</option>
                            <option>Telangana</option>
                            <option>Tripura</option>
                            <option>Uttar Pradesh</option>
                            <option>Uttarakhand</option>
                            <option>West Bengal</option>
                        </select>
                        <span asp-validation-for="State" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="UniversityBoardName" class="form-label"></label>
                        <input asp-for="UniversityBoardName" class="form-control" placeholder="Enter University / Board Name" />
                    </div>

                    <div class="col-md-6">
                        <label>Institute Establishment Certificate</label>
                        <input type="file" name="establishCertificate" accept=".pdf,.jpg,.jpeg,.png" class="form-control" />
                    </div>

                    <div class="col-md-6">
                        <label>Affiliation Certificate</label>
                        <input type="file" name="affiliationCertificate" accept=".pdf,.jpg,.jpeg,.png" class="form-control" />
                    </div>
                </div>
            </div>

            <div class="section-card">
                <h5>Principal & Contact Info</h5>
                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="PrincipalName" class="form-label"></label>
                        <input asp-for="PrincipalName" class="form-control" placeholder="Principal Name" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="MobileNumber" class="form-label"></label>
                        <input asp-for="MobileNumber" class="form-control" placeholder="Mobile Number" />
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Telephone" class="form-label"></label>
                        <input asp-for="Telephone" class="form-control" placeholder="Landline (optional)" />
                    </div>
                </div>
            </div>

            <div class="section-card">
                <h5>Login & Security</h5>
                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Enter Password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                    </div>

                    <div class="col-md-6">
                        <label>Security Question</label>
                        <select name="SecurityQuestion" class="form-select" required>
                            <option value="">-- Select a question --</option>
                            <option>What is your favorite book?</option>
                            <option>What is your pet's name?</option>
                            <option>What is your birth city?</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <label>Security Answer</label>
                        <input type="text" name="SecurityAnswer" class="form-control" placeholder="Enter Answer" required />
                    </div>
                </div>
            </div>

            <div class="form-check mt-3 mb-4">
                <input asp-for="DeclarationAccepted" class="form-check-input" />
                <label asp-for="DeclarationAccepted" class="form-check-label">
                    I hereby declare that all the information provided is true to the best of my knowledge.
                </label>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary me-2">Submit</button>
                <button type="reset" class="btn btn-secondary">Reset</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}